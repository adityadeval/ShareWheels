<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_DateValue_offer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        app:layout_constraintStart_toEndOf="@id/tvDateLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvDateLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvDateLabel" />

    <TextView
        android:id="@+id/tvOriginLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Origin"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDateLabel" />

    <TextView
        android:id="@+id/tv_OriginValue_offer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        app:layout_constraintStart_toEndOf="@id/tvOriginLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvOriginLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvOriginLabel" />

    <TextView
        android:id="@+id/tvDestinationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvOriginLabel" />

    <TextView
        android:id="@+id/tv_DestinationValue_offer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        app:layout_constraintStart_toEndOf="@id/tvDestinationLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvDestinationLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvDestinationLabel" />

    <TextView
        android:id="@+id/tvRideRequestorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ride Requestor"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDestinationLabel" />

    <TextView
        android:id="@+id/tv_RideRequestorValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        app:layout_constraintStart_toEndOf="@id/tvRideRequestorLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvRideRequestorLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvRideRequestorLabel" />

    <Button
        android:id="@+id/button_acceptRideRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept Ride Request"
        android:textSize="10sp"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_RideRequestorValue"
        app:backgroundTint="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>