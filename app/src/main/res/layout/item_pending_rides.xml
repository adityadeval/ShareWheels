<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_DateValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/tvDateLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvDateLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvDateLabel" />

    <TextView
        android:id="@+id/tvOriginLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Origin"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDateLabel" />

    <TextView
        android:id="@+id/tv_OriginValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/tvOriginLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvOriginLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvOriginLabel" />

    <TextView
        android:id="@+id/tvDestinationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvOriginLabel" />

    <TextView
        android:id="@+id/tv_DestinationValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/tvDestinationLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvDestinationLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvDestinationLabel" />

    <Button
        android:id="@+id/button_edit_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit ride"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:padding="12dp"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_DestinationValue" />

    <Button
        android:id="@+id/button_delete_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete ride"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:padding="12dp"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toEndOf="@id/button_edit_ride"
        app:layout_constraintBottom_toBottomOf="@id/button_edit_ride"/>

</androidx.constraintlayout.widget.ConstraintLayout>